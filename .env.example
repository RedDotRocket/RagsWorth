# API Keys (Required)
OPENAI_API_KEY=sk-your-openai-api-key
ANTHROPIC_API_KEY=sk-ant-your-anthropic-api-key

# Configuration Path (Optional)
RAGSWORTH_CONFIG=config.yaml

# Server Settings (Optional - defaults shown)
HOST=0.0.0.0
PORT=8000
LOG_LEVEL=info

# Data Storage Paths (Optional - defaults shown)
DATA_DIR=./data
VECTOR_STORE_PATH=./data/vector_store
DOCUMENT_PATH=./data/documents
AUDIT_LOG_PATH=./data/audit.log

# Vector Store Settings (Optional - defaults shown)
EMBEDDING_MODEL=sentence-transformers/all-mpnet-base-v2
VECTOR_STORE_TYPE=faiss

# Security Settings (Optional - defaults shown)
PII_DETECTION_ENABLED=true
PII_AUDIT_LOGGING=true